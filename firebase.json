{
  "hosting": {
    "public": "dist/test-i18n",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/it/index.html"
      },
      {
        "source": "/en{,/**}",
        "destination": "/en/index.html"
      },
      {
        "source": "/it{,/**}",
        "destination": "/it/index.html"
      }
    ],
    "i18n": {
      "root": "/"  
    }
  }
}

